<form method="POST" action='/api/users/{{this.id}}/posts' class="mb-4">
    <div class="form-group">
    <label for="name">Post</label>
    <input type="text" name="text" class="form-control mb-4">
  </div>
  <input type="submit" value="Add Post" class="btn btn-primary btn-block">
  <a class="btn btn-secondary" href='/api/users'>Go Back To Users</a>
</form>
<h4 class='mb-4'>Posts</h4>
<ul class="list-group">
  {{#each posts}}
  <li class="list-group-item">{{this.text}}</li>
  {{/each}}
</ul>